DUAS VIEWS:

CREATE OR REPLACE VIEW vw_pacotes_detalhados AS
SELECT 
    p.pacote_id,
    p.preco,
    p.descricao AS descricao_pacote,
    d.pais,
    d.cidade,
    v.data_voo,
    v.hora_partida,
    v.hora_chegada,
    h.nome AS hotel
FROM pacote p
JOIN destino d ON p.destino_id = d.destino_id
JOIN voo v ON p.voo_id = v.voo_id
JOIN hotel h ON p.hotel_id = h.hotel_id;
------------------------------------------------- 
CREATE OR REPLACE VIEW vw_reservas_clientes AS
SELECT 
    r.reserva_id,
    c.nome AS cliente,
    c.email,
    p.descricao AS pacote,
    r.data_inicio,
    r.data_fim,
    pg.montante,
    pg.data_pagamento
FROM reserva r
JOIN cliente c ON r.cliente_id = c.cliente_id
JOIN pacote p ON r.pacote_id = p.pacote_id
LEFT JOIN pagamento pg ON r.reserva_id = pg.reserva_id;
